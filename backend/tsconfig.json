{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "src/express.d.ts",
    "src/**/*.ts",
    "src/Middleware/Authenticate.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__/**/*.test.ts",
  ],
  "references": [
    {
      "path": "./__tests__/tsconfig.json",
    }
  ]
}
